// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id() @default(uuid()) @unique
  name String
  authToken String @default("")
  email String @unique
  password String
  level Int @default(1)
  experience Float @default(0)
  game GameObject? @relation(fields: [gameId], references: [id])
  gameId String?

}

model Building {
  id String @id @default(uuid()) @unique
  name String @unique
  imgUrl String @unique
  cost Cost?
  description String
  upgradableFrom String
  functionalities String
  tier String
}

model Cost {
  id String @id @default(uuid()) @unique
  building Building @relation(fields: [buildingId], references: [id], onDelete: Cascade)
  buildingId String  @unique
  card Cart?
  ducats Int @default(0)
  wood Int @default(0)
  stone Int @default(0)
  clay Int @default(0)
  wheat Int @default(0)
  meat Int @default(0)
  fish Int @default(0)
}

model Card {
  id String @id @default(uuid()) @unique
  number Int
  special String @default("")
  imageUrl String
}

model Cart {
  id String @id @default(uuid()) @unique
  level Int @unique()
  securityLevel Int
  discounts Int
  movement Int
  plunderChange Float
  cost Cost @relation(fields: [costId], references: [id], onDelete: NoAction)
  costId String @unique()
}

model Developement {
  id String @id @default(uuid()) @unique
  name String @unique()
  description String
  action String
}

model GameObject {
  id String @id @default(uuid()) @unique
  maxPlayers Int @default(4)
  players User[]
  timestamps Float
  mapSize String
  turnTime Int 
 }